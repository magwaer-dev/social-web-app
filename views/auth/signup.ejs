<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
      <% if (errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <div class="login-form">
            <form action="/signup", method="POST">
              <h1>Register</h1>
              <div class="content">
                <div class="input-field">
                  <input type="text" name="username" placeholder="Username" autocomplete="nope">
                </div>
                <div class="input-field">
                  <input type="email" name="email" placeholder="Email" autocomplete="nope">
                </div>
                <div class="input-field">
                  <input type="password" name="password" placeholder="Password" autocomplete="new-password">
                </div>
                <div class="input-field">
                  <input type="password" name="confirmPassword" placeholder="Confirm password" autocomplete="new-password">
                </div>
              </div>
              <div class="action">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <button type="submit">Register</button>
              </div>
            </form>
          </div>
    </main>

<%- include('../includes/end.ejs') %>